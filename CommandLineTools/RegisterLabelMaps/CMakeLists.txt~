CMAKE_MINIMUM_REQUIRED(VERSION 2.6)

PROJECT( RegisterLungs )

FIND_PACKAGE ( ITK )
IF ( ITK_FOUND )
  INCLUDE(${ITK_USE_FILE})
ELSE ( ITK_FOUND )
  MESSAGE ( FATAL_ERROR "Cannot build without ITK" )
ENDIF ( ITK_FOUND )

FIND_PATH(COMMON_DIRECTORY Common)
INCLUDE_DIRECTORIES(${COMMON_DIRECTORY})

SET ( RegisterLungs_SOURCE RegisterLungs.cxx )

ADD_EXECUTABLE ( RegisterLungs ${RegisterLungs_SOURCE})
TARGET_LINK_LIBRARIES ( RegisterLungs ITKIO ITKBasicFilters ITKCommon ITKAlgorithms )



